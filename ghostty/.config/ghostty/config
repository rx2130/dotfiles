# Keybindings
# tmux-style bindings (Command key combinations)
keybind = cmd+w=text:\x00x
keybind = cmd+t=text:\x00c
keybind = cmd+right_bracket=text:\x00o
keybind = cmd+left_bracket=text:\x00;
keybind = cmd+shift+right_bracket=text:\x00n
keybind = cmd+shift+left_bracket=text:\x00p
keybind = cmd+shift+enter=text:\x00z
keybind = cmd+d=text:\x00v
keybind = cmd+shift+d=text:\x00s
keybind = ctrl+space=text:\x00
keybind = ctrl+tab=text:\x00\t

keybind = cmd+digit_1=text:\x001
keybind = cmd+digit_2=text:\x002
keybind = cmd+digit_3=text:\x003
keybind = cmd+digit_4=text:\x004
keybind = cmd+digit_5=text:\x005
keybind = cmd+digit_6=text:\x006
keybind = cmd+digit_7=text:\x007
keybind = cmd+digit_8=text:\x008
keybind = cmd+digit_9=text:\x009

# vim tab fold
keybind = ctrl+six=text:\x1e
keybind = ctrl+i=text:\x0ei

# cmd+a copy-on-select disable
keybind = cmd+a=unbind
